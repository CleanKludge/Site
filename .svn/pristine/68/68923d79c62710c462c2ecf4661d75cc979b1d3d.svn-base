@using CleanKludge.Api.Responses
@using CleanKludge.Api.Responses.Articles

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#log-out").click(function () {
                $("#logoutForm").submit();
                return false;
            });
        });
    </script>
}

@if (ViewBag.IsSignedIn)
{
        <ul class="nav navbar-nav navbar-right">
            <li class="menu-item">
                <form asp-area="" asp-controller="Account" asp-action="LogOut" method="post" id="logoutForm">
                    <button type="submit" class="navbar-link navbar-btn">Log Out</button>
                </form>
            </li>
        </ul>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="menu-item @((Location)ViewData[nameof(Location)] == Location.Account ? "active" : "")"><a asp-area="" asp-controller="Account" asp-action="Login">Log In</a></li>
    </ul>
}
