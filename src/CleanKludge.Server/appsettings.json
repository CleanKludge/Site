{
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "ArticleSummaryPath": "wwwroot/articles/summaries",
    "ArticleContentPath": "wwwroot/articles/content",
    "WebRoot": "./wwwroot",
    "BowerDir": "./wwwroot/lib",
    "Bundles": {
        "Css": {
            "Source": "./wwwroot/css/*.css",
            "Minified": "./wwwroot/css/*.min.css",
            "Destination": "./wwwroot/css/"
        },
        "Js": {
            "Source": "./wwwroot/js/*.js",
            "Minified": "./wwwroot/js/*.min.js",
            "Destination": "./wwwroot/js/site.min.js"
        },
        "Less": {
            "Source": "Styles/*.less",
            "Base": "Styles/base-theme.less",
            "Destination": "./wwwroot/css/"
        }
    }
}
