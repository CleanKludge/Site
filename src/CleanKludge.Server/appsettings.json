{
    "Logging": {
        "IncludeScopes": false,
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "ArticlesPath": "wwwroot/articles",
    "ContentRepositoryUri": "https://github.com/CleanKludge/Content.git",
    "WebRoot": "./wwwroot",
    "BowerDir": "./wwwroot/lib",
    "Bundles": {
        "Css": {
            "Source": "./wwwroot/css/*.css",
            "Minified": "./wwwroot/css/*.min.css",
            "Destination": "./wwwroot/css/"
        },
        "Js": {
            "Source": "./wwwroot/js/*.js",
            "Minified": "./wwwroot/js/*.min.js",
            "Destination": "./wwwroot/js/site.min.js"
        },
        "Less": {
            "Source": "./wwwroot/less/*.less",
            "Base": "./wwwroot/less/base-theme.less",
            "Destination": "./wwwroot/css/"
        }
    }
}
